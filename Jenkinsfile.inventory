// Jenkins Pipeline for Inventory Service
// This pipeline handles building, testing, and deploying the Inventory microservice

pipeline {
    agent any

    environment {
        // Service Configuration
        SERVICE_NAME = 'inventory-service'
        SERVICE_PORT = '8082'

        // Docker Configuration
        DOCKER_REGISTRY = 'docker.io'
        DOCKER_IMAGE_NAME = 'pichc137/ktor-inventory-service'
        DOCKER_CREDENTIALS_ID = 'docker-hub-credentials'
        IMAGE_TAG = "${BUILD_NUMBER}-${GIT_COMMIT.take(7)}"

        // Gradle Configuration
        GRADLE_OPTS = '-Dorg.gradle.daemon=false'

        // Deployment
        DEPLOY_ENV = 'development'
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '5'))
        timeout(time: 20, unit: 'MINUTES')
        timestamps()
        disableConcurrentBuilds()
    }

    triggers {
        // GitHub webhook trigger - builds automatically on push events
        // No polling needed - Jenkins receives instant notifications from GitHub
        githubPush()
    }

    stages {
        stage('ğŸ” Checkout') {
            steps {
                script {
                    echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
                    echo "â•‘        INVENTORY SERVICE - CI/CD PIPELINE            â•‘"
                    echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                    echo "ğŸ“¦ Service: ${SERVICE_NAME}"
                    echo "ğŸŒ¿ Branch: ${env.GIT_BRANCH}"
                    echo "ğŸ“ Commit: ${env.GIT_COMMIT}"
                    echo "ğŸ—ï¸  Build: #${BUILD_NUMBER}"
                }
                checkout scm
            }
        }

        stage('ğŸ“Š Environment Info') {
            steps {
                sh '''
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                    echo "           Build Environment Information"
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                    echo "â˜• Java Version:"
                    java -version
                    echo ""
                    echo "ğŸ”§ Gradle Version:"
                    ./gradlew --version
                    echo ""
                    echo "ğŸ³ Docker Version:"
                    docker --version
                    echo ""
                    echo "ğŸ“‚ Workspace: ${WORKSPACE}"
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                '''
            }
        }

        stage('ğŸ”¨ Build Inventory Service') {
            steps {
                script {
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                    echo "           Building Inventory Service"
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                }
                sh '''
                    # Build only the inventory service and its dependencies
                    ./gradlew :inventory-service:clean :inventory-service:build -x test --stacktrace

                    echo ""
                    echo "âœ… Inventory service build completed successfully"
                '''
            }
        }

        stage('ğŸ§ª Test Inventory Service') {
            steps {
                script {
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                    echo "           Running Inventory Service Tests"
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                }
                sh '''
                    # Run tests for inventory service
                    ./gradlew :inventory-service:test --stacktrace

                    echo ""
                    echo "âœ… All tests passed"
                '''
            }
            post {
                always {
                    // Publish test results
                    junit testResults: '**/inventory-service/build/test-results/test/*.xml', allowEmptyResults: true

                    // Publish code coverage if available
                    script {
                        if (fileExists('inventory-service/build/reports/jacoco/test/jacocoTestReport.xml')) {
                            jacoco(
                                execPattern: '**/inventory-service/build/jacoco/*.exec',
                                classPattern: '**/inventory-service/build/classes',
                                sourcePattern: '**/inventory-service/src/main/kotlin',
                                exclusionPattern: '**/*Test*,**/*Mock*'
                            )
                        }
                    }
                }
            }
        }

        stage('ğŸ“¦ Build Fat JAR') {
            steps {
                script {
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                    echo "           Building Inventory Service Fat JAR"
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                }
                sh '''
                    ./gradlew :inventory-service:buildFatJar --stacktrace

                    echo ""
                    echo "ğŸ“¦ Fat JAR created:"
                    ls -lh inventory-service/build/libs/*-all.jar
                '''
            }
            post {
                success {
                    archiveArtifacts artifacts: 'inventory-service/build/libs/*-all.jar', fingerprint: true
                }
            }
        }

        stage('ğŸ³ Build Docker Image') {
            steps {
                script {
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                    echo "           Building Docker Image"
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                    echo "ğŸ·ï¸  Image: ${DOCKER_IMAGE_NAME}:${IMAGE_TAG}"
                }
                sh '''
                    docker build \
                        -f inventory-service/Dockerfile \
                        -t ${DOCKER_IMAGE_NAME}:${IMAGE_TAG} \
                        -t ${DOCKER_IMAGE_NAME}:latest \
                        .

                    echo ""
                    echo "âœ… Docker image built successfully"
                    docker images | grep ${DOCKER_IMAGE_NAME} | head -2
                '''
            }
        }

        stage('ğŸ” Security Scan') {
            steps {
                script {
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                    echo "           Security Scanning (Optional)"
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                }
                sh '''
                    # Optional: Run Trivy security scan if installed
                    if command -v trivy &> /dev/null; then
                        echo "Running Trivy security scan..."
                        trivy image --severity HIGH,CRITICAL ${DOCKER_IMAGE_NAME}:${IMAGE_TAG} || true
                    else
                        echo "âš ï¸  Trivy not installed, skipping security scan"
                        echo "   Install with: sudo apt-get install trivy"
                    fi
                '''
            }
        }

        stage('ğŸš€ Push Docker Image') {
            when {
                anyOf {
                    branch 'main'
                    branch 'master'
                    branch 'develop'
                }
            }
            steps {
                script {
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                    echo "           Pushing to Docker Registry"
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                }
                script {
                    docker.withRegistry("https://${DOCKER_REGISTRY}", "${DOCKER_CREDENTIALS_ID}") {
                        sh """
                            # Push images directly (DOCKER_IMAGE_NAME already includes username)
                            echo "ğŸ“¤ Pushing ${DOCKER_IMAGE_NAME}:${IMAGE_TAG}..."
                            docker push ${DOCKER_IMAGE_NAME}:${IMAGE_TAG}

                            echo "ğŸ“¤ Pushing ${DOCKER_IMAGE_NAME}:latest..."
                            docker push ${DOCKER_IMAGE_NAME}:latest

                            echo ""
                            echo "âœ… Images pushed successfully to ${DOCKER_REGISTRY}"
                        """
                    }
                }
            }
        }

        stage('ğŸš€ Deploy to Development') {
            when {
                branch 'develop'
            }
            steps {
                script {
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                    echo "           Deploying Inventory Service to Development"
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                }
                sh '''
                    # Ensure auth-service is running (inventory depends on it)
                    if ! docker-compose ps | grep -q "auth-service.*Up"; then
                        echo "âš ï¸  Auth service not running, starting it first..."
                        docker-compose up -d auth-service
                        sleep 10
                    fi

                    # Stop and remove existing inventory-service container
                    docker-compose stop inventory-service || true
                    docker-compose rm -f inventory-service || true

                    # Rebuild and start inventory-service only
                    docker-compose up -d --build inventory-service

                    # Wait for service to be healthy
                    echo ""
                    echo "â³ Waiting for inventory service to be healthy..."
                    for i in {1..30}; do
                        if curl -sf http://localhost:${SERVICE_PORT}/health > /dev/null; then
                            echo "âœ… Inventory service is healthy!"
                            break
                        fi
                        echo "   Attempt $i/30..."
                        sleep 2
                    done

                    # Show service status
                    echo ""
                    echo "ğŸ“Š Service Status:"
                    docker-compose ps inventory-service
                '''
            }
        }

        stage('âœ… Smoke Tests') {
            when {
                anyOf {
                    branch 'develop'
                    branch 'main'
                }
            }
            steps {
                script {
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                    echo "           Running Smoke Tests"
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                }
                sh '''
                    # Health check
                    echo "ğŸ” Testing /health endpoint..."
                    curl -f http://localhost:${SERVICE_PORT}/health || exit 1

                    # Test inter-service communication (if auth is required)
                    echo ""
                    echo "ğŸ” Testing inventory endpoints..."
                    # Add more specific smoke tests here

                    echo ""
                    echo "âœ… Smoke tests passed!"
                '''
            }
        }
    }

    post {
        always {
            script {
                echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                echo "           Pipeline Completed"
                echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                echo "ğŸ—ï¸  Build: #${BUILD_NUMBER}"
                echo "ğŸ“Š Status: ${currentBuild.result ?: 'SUCCESS'}"
                echo "â±ï¸  Duration: ${currentBuild.durationString.replace(' and counting', '')}"
                echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
            }

            // Clean up old Docker images
            sh '''
                echo "ğŸ§¹ Cleaning up old Docker images..."
                docker image prune -f --filter "until=48h" || true
            '''
        }
        success {
            echo "âœ… INVENTORY SERVICE BUILD SUCCEEDED!"
            // Add notifications here (Slack, email, etc.)
        }
        failure {
            echo "âŒ INVENTORY SERVICE BUILD FAILED!"
            // Add failure notifications here
        }
        unstable {
            echo "âš ï¸  INVENTORY SERVICE BUILD IS UNSTABLE!"
        }
    }
}
